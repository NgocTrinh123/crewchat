<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:descendantFocusability="blocksDescendants"
android:focusableInTouchMode="false"
android:layout_height="wrap_content">

<ImageView
        android:layout_centerInParent="true"
        android:id="@+id/chatting_imv"
        android:src="@drawable/movie"
        android:scaleType="fitXY"
        style="@style/video_image"
        android:layout_margin="@dimen/dimen_2_4"/>

<ImageView
        android:id="@+id/iv_play_btn"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

<TextView
        android:id="@+id/tv_duration"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/iv_play_btn"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:text="00:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ProgressBar
            android:id="@+id/progress_downloading"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>

    <View
            android:id="@+id/overlay_movie"
            android:layout_margin="@dimen/dimen_2_4"
            android:background="#88000000"
            android:layout_width="100dp"
            android:layout_height="80dp" />

</RelativeLayout>